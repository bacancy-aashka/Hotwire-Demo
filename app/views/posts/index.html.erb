<p style="color: green"><%= notice %></p>

<%= turbo_stream_from "new_post_list" %>
<%= turbo_frame_tag "post_frame", src: new_post_path, target: "_top" %>

<h1 class="mt-4">Posts</h1>

<div>
  <table class="border-separate border border-slate-500 border-spacing-2 w-full">
      <tr>
        <th> Image </th>
        <th> Title </th>
        <th> User Name </th>
        <th> Date </th>
        <th> Actions </th>
      </tr>
    <tbody id="posts">
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
<% else %>
  <%= link_to "Sign In", user_session_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
<% end %>