<%= form_with(model: post, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } ) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div class="my-4">
    <%= form.label "Upload Image" %> <br>
    <%= form.file_field :image %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div>
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-2" %>
  </div>
<% end %>
